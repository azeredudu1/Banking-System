		<class>com.azeredudu.gestion.banque.entities.Retrait</class>
		<class>com.azeredudu.gestion.banque.entities.Versement</class>
		<class>com.azeredudu.gestion.banque.entities.Role</class>
		<class>com.azeredudu.gestion.banque.entities.User</class>
		<class>com.azeredudu.gestion.banque.entities.RoleEmployee</class>
	
		<properties>
			<property name="hibernate.hbm2ddl.auto"
